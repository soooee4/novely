<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Common">
    <select id="getGenre">
        SELECT
          code,
          code_name,
          color
        FROM
            t_code_mgt
        WHERE
            group_code = 'GENRE'
    </select>
</mapper>

<mapper namespace="Common">
    <select id="getTag">
        SELECT
          code,
          code_name,
          color,
          group_code
        FROM
            t_code_mgt
    </select>
</mapper>
